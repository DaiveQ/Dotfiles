# clean make
alias clm="make clean && sudo make install clean"

# dwmblocks
alias dwmb="killall dwmblocks &>/dev/null; dwmblocks & disown"

# dwm merge
alias dwmm="
	echo '-- merging attachaside --';
	git merge attachaside -m attachaside;
	echo '-- merging cfacts --';
	git merge cfacts -m cfacts;
	echo '-- merging pertag --';
	git merge pertag -m pertag;
	echo '-- merging uselessgap --';
	git merge uselessgap -m uselessgap; 
	echo '-- merging config --';
	git merge config -m config;"

# less
alias l="less"

# neovim
alias vim="nvim"

# nerd font
alias nerd='firefox --new-window "https://www.nerdfonts.com/cheat-sheet"'

# pacman
unalias pacupg # Set by arch plugin for zsh
function pacupg() { sudo pacman -Syu && kill -36 $(pidof dwmblocks); }
alias pacinl="grep -i installed /var/log/pacman.log"
alias pacupgl="grep -i upgraded /var/log/pacman.log"
alias pacrel="grep -i removed /var/log/pacman.log"
alias pacreml="grep -i removed /var/log/pacman.log"

# picom
alias startpicom="picom --daemon --experimental-backend --backend glx"

# pulseeffects
alias startpulseeffects="pulseeffects --gapplication-service & disown"

# python
alias py="python"

# termite
function t() { termite -d $PWD & disown }

# wifi
alias wlman="sudo iw wlp1s0 set type managed"
alias wlmon="sudo iw wlp1s0 set monitor none"
alias wlup="sudo ip link set wlp1s0 up"
alias wldown="sudo ip link set wlp1s0 down"

# zplug
alias zplugupg="
	zplug install;
	zplug update;
	zplug load;
	zplug clean;"

# change directory 
alias cconf="cd ~/.config/"
alias cdoc="cd ~/doc/"
alias cdown="cd ~/down/"
alias cldm="cd /etc/lightdm/"
alias cldmw="cd /usr/share/lightdm-webkit/themes/"
alias cdwm="cd ~/.dwm/dwm/"
alias cdwmb="cd ~/.dwm/dwmblocks/"
alias cdwmd="cd ~/.dwm/"
alias cdwms="cd ~/.dwm/statusbar/"
alias cnvim="cd ~/.config/nvim/"
alias cpico="cd ~/.config/picom/"
alias cproj="cd ~/proj/"
alias cterm="cd ~/.config/termite/"
alias czsh="cd ~/.config/zsh/"

# modify files (alias names make less sense if you don't use vim)
alias vali="$EDITOR ~/.config/zsh/.aliases"
alias vpico="$EDITOR ~/.config/picom/picom.conf"
alias vterm="$EDITOR ~/.config/termite/config"
alias vzenv="$EDITOR ~/.config/zsh/.zshenv"
alias vzrc="$EDITOR ~/.config/zsh/.zshrc"
